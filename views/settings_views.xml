<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_settings_crm" model="ir.ui.view">
    <field name="name">crm.settings</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <field name="group_crm_visible" position="after">
            <separator string="Rappels Automatiques"/>
            <field name="enable_reminders"/>
        </field>
    </field>
  </record>

  <record id="res_config_settings_enable_reminders" model="ir.ui.view">
    <field name="name">res.config.settings.enable.reminders</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <field name="enable_reminders"/>
    </field>
  </record>
</odoo>